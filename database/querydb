CREATE TABLE UNIVERSITAS (
    ID SMALLINT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    UNIVERSITAS VARCHAR(66) NOT NULL
);

CREATE TABLE TIPE_MEMBER (
    ID SMALLINT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    TIPE_MEMBER VARCHAR(10) NOT NULL
);

CREATE TABLE TIPE_SOAL (
    ID SMALLINT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    TIPE_SOAL VARCHAR(50) NOT NULL
);

CREATE TABLE SOAL (
    ID SMALLINT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    KONTEN TEXT NOT NULL,
    OPSI_A CHAR(1) NOT NULL,
    OPSI_B CHAR(1) NOT NULL,
    OPSI_C CHAR(1) NOT NULL,
    OPSI_D CHAR(1) NOT NULL,
    JAWABAN CHAR(5) NOT NULL,
    BOBOT DOUBLE,
    ID_TIPE_SOAL SMALLINT REFERENCES TIPE_SOAL(ID)
);

CREATE TABLE PRODI (
    ID SMALLINT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    ID_TIPE_PRODI SMALLINT NOT NULL REFERENCES TIPE_SOAL(ID),
    PRODI VARCHAR(66) NOT NULL
);

CREATE TABLE AKUN (
    USERNAME VARCHAR(50) NOT NULL AUTO_INCREMENT PRIMARY KEY,
    EMAIL VARCHAR(50) NOT NULL,
    PASSWORD VARCHAR(100) NOT NULL,
    STATUS_BAYAR SMALLINT,
    STATUS_KERJA SMALLINT,
    ID_TIPE_MEMBER SMALLINT NOT NULL REFERENCES TIPE_MEMBER(ID),
    ID_UNIVERSITAS SMALLINT NOT NULL REFERENCES UNIVERSITAS(ID),
    ID_PRODI SMALLINT NOT NULL REFERENCES PRODI(ID),
    ID_TIPE_SOAL SMALLINT NOT NULL REFERENCES TIPE_SOAL(ID)
);

CREATE TABLE NILAI_USER (
    ID SMALLINT AUTO_INCREMENT NOT NULL PRIMARY KEY,
    ID_USER VARCHAR(50) NOT NULL REFERENCES AKUN(USERNAME),
    NILAI DOUBLE
);

CREATE TABLE REKAP_TO (
    ID_USER VARCHAR(50) NOT NULL REFERENCES AKUN(USERNAME),
    ID_SOAL SMALLINT NOT NULL REFERENCES SOAL(ID),
    BOBOT DOUBLE,
    PRIMARY KEY(ID_USER, ID_SOAL)
)